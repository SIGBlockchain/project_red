<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="sigblockchain.projectred.gui.Controller">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <TextField fx:id="balanceView" alignment="CENTER_RIGHT" disable="true" editable="false" focusTraversable="false"
               prefHeight="33.0" prefWidth="160.0" promptText="Account Balance" style="-fx-opacity: 1;"
               GridPane.rowIndex="1" GridPane.valignment="TOP">
        <GridPane.margin>
          <Insets left="20.0"/>
        </GridPane.margin>
    </TextField>
    <TextField fx:id="addressView" alignment="CENTER_RIGHT" disable="true" editable="false" focusTraversable="false"
               prefHeight="33.0" prefWidth="160.0" promptText="Wallet Address"
               style="-fx-opacity: 1; -fx-border-bottom-color: grey;" GridPane.columnIndex="1"
               GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
        <GridPane.margin>
          <Insets left="20.0"/>
        </GridPane.margin>
    </TextField>
    <Button fx:id="refresh" defaultButton="true" focusTraversable="false" mnemonicParsing="false" onAction="#start"
            prefHeight="33.0" prefWidth="121.0" text="REFRESH" textAlignment="CENTER" GridPane.columnIndex="2"
            GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
        <cursor>
          <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
    <Label fx:id="title" text="Block-Chain Account" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="1"
           GridPane.halignment="CENTER">
        <font>
          <Font name="System Bold" size="27.0"/>
        </font>
    </Label>
</GridPane>
